@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Event</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @{int i = 0;}
                @foreach (var currentEvent in ViewBag.events)
                {
                    <div>
                        <span>
                            <input type="checkbox" name="selected" value="@i" />
                            <input type="hidden" name="registrations[@i].EventId" value="@currentEvent.Id" />
                        </span>
                        <span>
                            <b>
                                @Html.Raw(currentEvent.Summary)
                            </b>
                        </span>
                        <span>
                            @Html.Raw(currentEvent.Start.DateTime)
                        </span>

                        @{++i;}
                    </div>
                 }
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>



                            }