@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li>
                <button type="submit" class="btn btn-default log-in-off-button" id="log-off" value="Logoff" title="Log out">Log off</button>
                @*<a class="btn btn-default" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>*@
            </li>
        </ul>
            }
        }
        else
        {

            using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
                @Html.AntiForgeryToken()
                <ul class="nav navbar-nav navbar-right" id="socialLoginList">
            <li>
                <button type="submit" class="btn btn-default log-in-off-button" id="Google" name="provider" value="Google" title="Log in">Log in</button>
            </li>
        </ul>
    }
